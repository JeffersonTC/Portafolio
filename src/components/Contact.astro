---
import EmailIcons from "../assets/Icons/Email.astro";
import TelIcons from "../assets/Icons/Tel.astro";
import MapIcons from "../assets/Icons/Map.astro";
import InforConctact from "../components/InforContact.astro";
---

<section
    id="contact"
    class="lg:w-[940px] xl:w-[1280px] mx-auto py-5 sm:py-10 scroll-margin-top flex flex-col text-xl to-slate-950 text-gray-400"
>
    <div class="mt-10">
        <h5
            class="text-xl text-teal-500 uppercase text-teal-500 text-xl sm:text-2xl font-bold tracking-wider mb-5"
        >
            Contacto
        </h5>
        <p>
            Estoy disponible para trabajar en proyectos freelance y
            oportunidades de tiempo completo.
        </p>

        <div class="grid grid-cols-1 lg:grid-col-2 gap-12 mt-10">
            <div
                class="bg-gray-900 p-6 sm:p-8 rounded-xl border border-gray-800"
            >
                <form action="" class="space-y-5">
                    <div>
                        <label for="name" class="text-sm text-gray-400 mb-2"
                            >Name
                        </label>
                        <input
                            type="text"
                            id="name"
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-teal-500 transition-colors"
                            placeholder="Tu Nombre"
                        />
                    </div>

                    <div>
                        <label for="email" class="text-sm text-gray-400 mb-2"
                            >Email
                        </label>
                        <input
                            type="email"
                            id="email"
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-teal-500 transition-colors"
                            placeholder="Tu@email.com"
                        />
                    </div>
                    <div>
                        <label for="subject" class="text-sm text-gray-400 mb-2"
                            >Asunto
                        </label>
                        <input
                            type="text"
                            id="subject"
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-teal-500 transition-colors"
                            placeholder="¿Sobre qué quieres hablar?"
                        />
                    </div>
                    <div>
                        <label
                            for="message"
                            class="block text-sm text-gray-400 mb-2"
                            >Mensaje
                        </label>
                        <textarea
                            id="message"
                            rows="6"
                            class="w-full text-left px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-teal-500 transition-colors resize-none"
                            placeholder="Cuéntame sobre tu proyecto..."
                        ></textarea>
                    </div>
                    <div>
                        <button
                            type="submit"
                            class="w-full cursor-pointer flex justify-center items-center px-8 py-4 text-gray-900 sm:auto rounded-lg text-white bg-teal-500 hover:bg-teal-400 gap-2"
                        >
                            Enviar Mensaje
                        </button>
                    </div>
                </form>
            </div>
            <div>
                <address class="mt-20">
                    <h4 class="mb-10 text-teal-500 text-2xl">
                        Información de Contacto
                    </h4>
                    <div class="flex flex-col  items-start break-words">
                        <InforConctact Email="jeffersontovarcortez74@gmail.com">
                            <EmailIcons class="w-8 h-8 text-teal-500" />
                        </InforConctact>
                        <InforConctact Tel="+57 3226814851">
                            <TelIcons class="w-8 h-8 text-teal-500" />
                        </InforConctact>
                        <InforConctact
                            Ubicacion="Nelson Mandela Sector Villa corelca"
                         >
                            <MapIcons class="w-8 h-8 text-teal-500" />
                        </InforConctact>
                    </div>
                </address>
            </div>
        </div>
    </div>
</section>
