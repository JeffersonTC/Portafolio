import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/onest";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portafolio_web</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		font-family: "Onest Variable", sans-serif;
		display: flex;
		flex-direction: column;
		background-color: #030712;
		scroll-behavior: smooth;
	}
	.scroll-margin-top {
		scroll-margin-top: 80px; /* Ajusta este valor seg√∫n la altura de tu encabezado */
	}
	.custom-shape-divider-top-1737651019 {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		overflow: hidden;
		line-height: 0;
	}

	.custom-shape-divider-top-1737651019 svg {
		position: relative;
		display: block;
		width: calc(100% + 1.3px);
		height: 150px;
	}

	.custom-shape-divider-top-1737651019 .shape-fill {
		fill: #ffffff;
	}
</style>
